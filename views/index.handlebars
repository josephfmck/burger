<h1>Eat Da Burger!</h1>
<br>

<div id='available'>
  <h2>Burgers Available to Eat:</h2>
  <ul>
    {{#each burgers}} {{#unless this.devoured}}   <!--loops through each burger, display unless devoured is true-->
    <li>
      {{this.id}}. {{this.burger_name}}

      <form action="/{{this.id}}?_method=PUT" method="POST">      <!--form to update burger devoured status using ID-->
        <input type="hidden" name="devoured" value="false">       
        <button class="btn btn-warning" type="submit">Eat Me!</button>  <!--eat button sets devoured to true-->
      </form>

    </li>
    {{/unless}} {{/each}}
  </ul>
</div>
<div id='devoured'>
  <h2>Burgers That Have <br>Been Devoured: </h2>

  <ul>
    {{#each burgers}} {{#if this.devoured}}   <!--loops through each burger, displays if devoured is true-->
    <li>
      {{this.id}}. {{this.burger_name}} <!--display burger id and name-->
    </li>
    {{/if}} {{/each}}
  </ul>
</div>

<div id='add'>
  <h2>Add a Burger: </h2>

  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      <label for="burgerName">Burger Name:</label>
      <input type="text" id="burgerName" name="burger_name">
    </div>
    <button class="btn btn-primary" type="submit">Add Burger</button>
  </form>
</div>